program DZ2;

{$APPTYPE CONSOLE}

uses
  System.SysUtils,
  Distance in 'Distance.pas';

var
  start, finish, step, maximum, x, y1, y2: real;

function f(x:real): real;
  begin
    f := sin(x)/x;
  end;

function g(x:real): real;
  begin
    g := (sin(x+1)/(x+1))/(cos(x+1)/(x+1));
  end;

begin
  start := 0.5;
  finish := 1;
  step := 0.01;
  maximum := 0;
  x := start;
  Maxim(f(x), g(x), start, finish, step, maximum);
  writeln('Максимальное расстояние между точками = ', maximum);
  readln;
end.
