program RK1;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var x, res: real;
    t: boolean;
    n, quantity: integer;




begin
  writeln('Введите х:');
  readln(x);
  res := x;
  for n := 1 to 50 do
  begin
    writeln(sin(res));
    if sin(res) < 0 then
      quantity := quantity + 1;
    res := res * x;
  end;
  t := quantity > 3;
  writeln('Логическая переменная равняется= ', t);
  readln;

end.
