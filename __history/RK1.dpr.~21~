program RK1;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var x, res: real;
    t: boolean;
    n, quantity: integer;




begin
  writeln('Введите х:');
  readln(x);
  for n := 1 to 50 do
  begin
     if sin(res) < 0 then
       quantity := quantity + 1;
     res := res * res;
  end;
  if quantity > 3 then
    t := True
  else
    t := False;
  writeln('Логическая переменная равняется= ', t);
  readln;

end.
